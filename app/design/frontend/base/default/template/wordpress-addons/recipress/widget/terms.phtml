<?php $terms = $this->getRecipeTerms() ?>
<?php if (count($terms) > 0): ?>
	<div class="block block-blog block-recipe-terms">
		<?php if ($title = $this->getTitle()): ?>
			<div class="block-title">
				<strong><span><?php echo $this->__($title) ?></span></strong>
			</div>
		<?php endif; ?>
		<div class="block-content">
			<ul id="<?php echo $this->getListId() ?>">
			<?php foreach($terms as $term): ?>
				<li class="item">
					<a href="<?php echo $term->getUrl() ?>" title="<?php echo $this->htmlEscape($term->getName()) ?>"><?php echo $this->htmlEscape($term->getName()) ?></a>
				</li>
			<?php endforeach; ?>
			</ul>
			<script type="text/javascript">decorateList('<?php echo $this->getListId() ?>')</script>
		</div>
	</div>
<?php endif; ?>